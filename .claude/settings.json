{
  "allowedTools": {
    "Edit": true,
    "Bash": ["npm", "node", "ls", "cat", "git*", "find", "grep", "cd", "mkdir", "touch", "rm", "cp", "mv", "echo", "pwd", "test", "head", "tail", "less", "more", "nano", "wc", "sort", "uniq", "cut", "sed", "awk", "curl", "wget", "diff", "patch", "tar", "zip", "unzip", "jq", "npm run*"],
    "Fetch": true,
    "mcp__modelcontextprotocol-server-github__server-github": true
  },
  "defaultShell": "bash",
  "memory": {
    "format": "markdown",
    "enabled": true
  },
  "autoApproveCommands": {
    "curl": {
      "patterns": [
        "*api.github.com/repos/jerseycheese/narraitor/issues/*",
        "*github.com*issues*",
        "curl -s https://api.github.com/repos/jerseycheese/narraitor/issues/*"
      ]
    }
  }
}
